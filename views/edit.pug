extends layout

block content
    .row
        .col-md-4
            .card
                .card-header
                    h3 Die Aufgabe bearbeiten
                .card-body  
                    form(method="POST", action="/bearbeiten/" + todo.id + "?_method=PUT")
                        .form-group
                            label(for='todo') Eine Aufgabe bearbeiten:
                            input.form-control#todo(type='text', value=todo.title, name="title")
                        button(type="submit").btn.btn-primary.btn-block
                            | Bearbeiten
                            i.fas.fa-pencil-alt.pl-1